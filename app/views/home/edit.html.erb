									</div>
									<!-- end widget edit box -->
				
									<!-- widget content -->
									<div class="widget-body no-padding">
				
										<form class="smart-form" id="campaign_form" action="/home/edit/<%= @home.id %>" method="POST" enctype='multipart/form-data'>
											<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
											<fieldset>
												<section>
													<label class="label">Address</label>
													<label class="input">
														<input type="text" name="address" value="<%= @home.address %>">
													</label>
												</section>

												<section>
													<label class="label" >Type</label>
													<label class="select">
														<select name="home_type">
															<option value="">&nbsp;&nbsp;Select Type</option>
															
															<option value="Single-Family Home" <% if @home.home_type == 'Single-Family Home' %>selected="selected"<% end %>>&nbsp;&nbsp;Single-Family Home</option>
															<option value="Condo" <% if @home.home_type == 'Condo' %>selected="selected"<% end %>>&nbsp;&nbsp;Condo</option>
															<option value="Townhouse" <% if @home.home_type == 'Townhouse' %>selected="selected"<% end %>>&nbsp;&nbsp;Townhouse</option>
															<option value="Coop" <% if @home.home_type == 'Coop' %>selected="selected"<% end %>>&nbsp;&nbsp;Coop</option>
															<option value="Apartment" <% if @home.home_type == 'Apartment' %>selected="selected"<% end %>>&nbsp;&nbsp;Apartment</option>
															<option value="Loft" <% if @home.home_type == 'Loft' %>selected="selected"<% end %>>&nbsp;&nbsp;Loft</option>
															<option value="TIC" <% if @home.home_type == 'TIC' %>selected="selected"<% end %>>&nbsp;&nbsp;TIC</option>
															<option value="Farm/Ranch" <% if @home.home_type == 'Farm/Ranch' %>selected="selected"<% end %>>&nbsp;&nbsp;Farm/Ranch</option>
															<option value="Lot/Land" <% if @home.home_type == 'Lot/Land' %>selected="selected"<% end %>>&nbsp;&nbsp;Lot/Land</option>
															<option value="Multi-Family" <% if @home.home_type == 'Multi-Family' %>selected="selected"<% end %>>&nbsp;&nbsp;Multi-Family</option>
															<option value="Investment" <% if @home.home_type == 'Investment' %>selected="selected"<% end %>>&nbsp;&nbsp;Investment</option>
														</select> </label>
												</section>

												<section>
													<div class="form-group">
														<label class="label">Home Start Date</label>
														<div class="input-group">
															<input type="text" name="open_house_date" placeholder="" class="form-control datepicker" data-dateformat="mm/dd/yy" value="<%= @home.open_house_date.strftime("%m/%d/%Y") %>">
															<span class="input-group-addon"><i class="fa fa-calendar"></i></span>
														</div>
													</div>
												</section>

												<section>
													<div class="form-group">
														<label>Start Time</label>
														<div class="input-group">
															<input class="form-control" id="start_timepicker" type="text" placeholder="Select time" name="open_house_start_time" value="<%= @home.open_house_start_time.strftime("%I:%M %p") %>">
															<span class="input-group-addon"><i class="fa fa-clock-o"></i></span>
														</div>
													</div>
											  </section>

												<section>
													<div class="form-group">
														<label>End Time</label>
														<div class="input-group">
															<input class="form-control" id="end_timepicker" type="text" placeholder="Select end time" name="open_house_end_time" value="<%= @home.open_house_end_time.strftime("%I:%M %p") %>">
															<span class="input-group-addon"><i class="fa fa-clock-o"></i></span>
														</div>
													</div>
												</section>

												<section>
													<label class="label">Price</label>
													<label class="input">
														<input type="text" name="price" value="<%= @home.price %>">
													</label>
												</section>

												<section>
													<label class="label">For Sale</label>
													<label class="select">
														<select  name="for_sale" value="<%= @home.for_sale %>">
															<option value="true" <% if @home.for_sale %>selected="selected"<% end %>>&nbsp;&nbsp;Yes</option>
															<option value="false" <% if not @home.for_sale%>selected="selected"<% end %>>&nbsp;&nbsp;No</option>
														</select> <i></i> </label>
												</section>

												<section>
													<label class="label">Beds</label>
													<label class="input">
														<input type="number" min="0" name="beds" value="<%= @home.beds %>">
													</label>
												</section>

												<section>
													<label class="label">Baths</label>
													<label class="input">
														<input type="number" min="0" name="baths" value="<%= @home.baths %>">
													</label>
												</section>


											</fieldset>
										
											<footer>
												<button type="submit" class="btn btn-primary">
													Submit
												</button>
											</footer>
										</form>
				
									</div>
									<!-- end widget content -->
				
								</div>
