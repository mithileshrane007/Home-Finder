		<div id="main" role="main">

			<!-- MAIN CONTENT -->
			<div id="content" class="container">

				<div class="row">
					<div class="col-xs-12 col-sm-2 col-md-4 col-lg-4">
					</div>
					<div class="col-xs-12 col-sm-8 col-md-4 col-lg-4">
						<div class="well no-padding" style="-webkit-box-shadow: -14px 24px 29px -3px rgba(0,0,0,0.37);
-moz-box-shadow: -14px 24px 29px -3px rgba(0,0,0,0.37);
box-shadow: -14px 24px 29px -3px rgba(0,0,0,0.37);margin-top:15%">
							<form action="/change_password/" method="post" id="login-form" class="smart-form client-form">
								<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
								<header>
									Change Password
								</header>

								<fieldset>
									
									<section>
										<label class="label">Old Password</label>
										<label class="input"> <i class="icon-append fa fa-lock"></i>
											<input type="password" name="old_password" >
											<b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> Enter your old password</b> </label>
											<div class="note">
											
										</div>
									</section>

									<section>
										<label class="label">New Password</label>
										<label class="input"> <i class="icon-append fa fa-lock"></i>
											<input type="password" name="new_password" id="password">
											<b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> Enter your new password</b> </label>
											
									</section>

									<section>
										<label class="label">Confirm Password</label>
										<label class="input"> <i class="icon-append fa fa-lock"></i>
											<input type="password" name="confirm_password">
											<b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> Enter your new password</b> </label>
											
									</section>

								</fieldset>
								<footer>
									<button type="submit" class="btn btn-primary">
										Submit
									</button>
								</footer>
							</form>
								
							</ul>
						</div>
						
					
						
					</div>
					<div class="col-xs-12 col-sm-2 col-md-4 col-lg-4">
					</div>
				</div>
			</div>

		</div>
